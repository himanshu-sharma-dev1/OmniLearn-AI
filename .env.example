# ====================================
# Intelli-Tutor Environment Variables
# ====================================
# Copy this file to .env and fill in your values

# Required - AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Required - Security (generate random strings)
JWT_SECRET_KEY=change-me-to-a-random-string
SECRET_KEY=another-random-string-for-flask-sessions

# Optional - Google OAuth (for "Continue with Google" login)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FRONTEND_URL=http://localhost:3000

# Optional - Email (for password reset functionality)
# For Gmail: Use an App Password, not your regular password
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
